<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/wave"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            android:layout_marginBottom="150dp">

            <TextView
                android:id="@+id/golf_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_golfing"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                app:layout_constraintStart_toEndOf="@id/golf_img"
                app:layout_constraintTop_toTopOf="@id/golf_img"
                app:layout_constraintBottom_toBottomOf="@id/golf_img"/>

            <ImageView
                android:id="@+id/golf_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/golficon"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/block2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                app:layout_constraintStart_toEndOf="@id/profile_icon"
                app:layout_constraintTop_toTopOf="@id/profile_icon"
                app:layout_constraintBottom_toBottomOf="@id/profile_icon"/>

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profileicon"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/block3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/block2"
            app:layout_constraintBottom_toBottomOf="@id/block2"
            android:layout_marginEnd="10dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/hamburger_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:background="@drawable/hamburgericon"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/block1"
            app:layout_constraintStart_toStartOf="@+id/block1"
            app:layout_constraintEnd_toEndOf="@+id/block1"
            android:padding="5dp"
            android:layout_marginBottom="25dp"
            >

            <TextView
                android:id="@+id/stats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_stats"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                app:layout_constraintStart_toEndOf="@id/stats_img"
                app:layout_constraintTop_toTopOf="@id/stats_img"
                app:layout_constraintBottom_toBottomOf="@id/stats_img"/>

            <ImageView
                android:id="@+id/stats_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graphicon"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>